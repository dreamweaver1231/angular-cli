{
  "compilerOptions": {
    "baseUrl":"./src",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "mapRoot": "/",
    "inlinesource": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
    "node_modules",
    "bower_components"
  ],
  "includes": [
    "**.d.ts"
  ]
}
